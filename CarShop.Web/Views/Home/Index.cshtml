<!-- Products -->

<div class="products">
    <div class="container">
        <div class="row">
            <div class="col">

                <div class="product_grid">

                    <!-- Product -->
                    @foreach (var item in ViewBag.Categories)
                    {
                        <div class="product">
                            <div class="product_image"><img src="@(ViewBag.AssetsUrl)@item.IconPhoto" alt=""></div>
                            <div class="product_content">
                                <div class="product_title"><a href="@Url.Action("Index","Category", new { id = item.Id })">@item.Name</a></div>
                            </div>
                        </div>
                    }



                </div>

            </div>
        </div>
    </div>
</div>

