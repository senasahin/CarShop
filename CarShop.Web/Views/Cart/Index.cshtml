@model IEnumerable<CarShop.Model.Cart>
@{
    ViewBag.Title = "Index";

}

<link rel="stylesheet" type="text/css" href="~/styles/bootstrap4/bootstrap.min.css">
<link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" type="text/css" href="~/styles/cart.css">
<link rel="stylesheet" type="text/css" href="~/styles/cart_responsive.css">

<div class="super_container">





    <!-- Home -->
    <div class="home">
        <div class="home_container">
            <div class="home_background" style="background-image:url(/images/mainphoto.jpeg)"></div>
            <div class="home_content_container">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="home_content">
                                <div class="breadcrumbs">
                                    <ul>
                                        <li><a href="@Url.Action("Index","Home")"><font size="5">Anasayfa</font></a><font size="5">/Alışveriş</font></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cart Info -->

    <div class="cart_info">
        <div class="container">
            <div class="row">
                <div class="col">
                    <!-- Column Titles -->
                    <div class="cart_info_columns clearfix">
                        <div class="cart_info_col cart_info_col_product">Ürün</div>
                        <div class="cart_info_col cart_info_col_price">Ücret</div>
                        <div class="cart_info_col cart_info_col_quantity">Adet</div>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {

                <div class="row cart_items_row">
                    <div class="col">
                        <!-- Cart Item -->
                        <div class="cart_item d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-start">
                            <!-- Name -->
                            <div class="cart_item_product d-flex flex-row align-items-center justify-content-start">
                                <div class="cart_item_image">
                                    <div><img src="@(ViewBag.AssetsUrl)@item.CartProductPhoto" alt=""></div>
                                </div>
                                <div class="cart_item_name_container">
                                    <div class="cart_item_name"><a @*href="@Url.Action("Index","Product", new { id = item.Id })"*@>@item.ProductName</a></div>
                                </div>
                            </div>
                            <!-- Price -->
                            <div class="cart_item_price">@item.Price TL</div>
                            <!-- Quantity -->
                            <div class="cart_item_quantity">@item.Piece</div>
                            <!-- Total -->

                        </div>


                    </div>
                </div>
                <div class="row row_cart_buttons">
                    <div class="col">
                        <div class="cart_buttons d-flex flex-lg-row flex-column align-items-start justify-content-start">
                            @*<div class="button continue_shopping_button"><a href="@Url.Action("Index", "Home")">Alışverişe Devam Et</a></div>*@
                            <div class="cart_buttons_right ml-lg-auto">
                                <div class="button clear_cart_button"><a href="@Url.Action("Delete","Cart", new {id = item.Id })">Ürünü Sil</a></div>

                            </div>
                        </div>
                    </div>
                </div>

            }
            <div class="row row_cart_buttons">
                <div class="col">
                    <div class="cart_buttons d-flex flex-lg-row flex-column align-items-start justify-content-start">
                        <div class="button continue_shopping_button"><a href="@Url.Action("Index", "Home")">Alışverişe Devam Et</a></div>
                        <div class="cart_buttons_right ml-lg-auto">
                            @*<div class="button clear_cart_button"><a href="#">Ürünü Sil</a></div>*@

                        </div>
                    </div>
                </div>
            </div>
            <div class="row row_extra">
                <div class="col-lg-4">
                </div>

                <div class="col-lg-6 offset-lg-2">
                    <div class="cart_total">

                        <div class="section_title">Sipariş Detayları</div>

                        <div class="cart_info_columns clearfix">
                            <div class="cart_total_container">
                                <ul>
                                    @{
                                        decimal genelToplam = 0;
                                    }

                                    @foreach (var item in Model)
                                    {


                                        <li class="d-flex flex-row align-items-center justify-content-start">
                                            <div class="cart_total_title">@item.Piece  Adet  @item.ProductName Aracı </div>
                                            @{

                                                decimal total = @item.Piece * @item.Price;
                                                genelToplam += total;
                                            }
                                            <div class="cart_total_value ml-auto">@total  TL</div>
                                        </li>
                                    }

                                    <li class="d-flex flex-row align-items-center justify-content-start">
                                        <div class="cart_total_title">Genel Toplam</div>
                                        <div class="cart_total_value ml-auto">@genelToplam  TL</div>
                                    </li>
                                </ul>

                            </div>
                        </div>
                        <div class="button checkout_button"><a href="@Url.Action("Index", "Checkout")">Ödeme Yap</a></div>
                        @*<div class="button checkout_button"><input type="submit"  value="Ödeme Yap"/>@*</div>*@

                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<script src="~/js/jquery-3.2.1.min.js"></script>
<script src="~/styles/bootstrap4/popper.js"></script>
<script src="~/styles/bootstrap4/bootstrap.min.js"></script>
<script src="~/plugins/greensock/TweenMax.min.js"></script>
<script src="~/plugins/greensock/TimelineMax.min.js"></script>
<script src="~/plugins/scrollmagic/ScrollMagic.min.js"></script>
<script src="~/plugins/greensock/animation.gsap.min.js"></script>
<script src="~/plugins/greensock/ScrollToPlugin.min.js"></script>
<script src="~/plugins/easing/easing.js"></script>
<script src="~/plugins/parallax-js-master/parallax.min.js"></script>
<script src="~/js/cart.js"></script>