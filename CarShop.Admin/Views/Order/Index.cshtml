@model IEnumerable<CarShop.Model.Order>
@{
    ViewBag.Title = "Siparişler";
}

<!-- ============================================================== -->
<!-- pageheader  -->
<!-- ============================================================== -->
<h2 class="pageheader-title">Siparişler</h2>
<div class="page-breadcrumb">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb"></ol>
    </nav>
</div>
<!-- ============================================================== -->
<!-- end pageheader  -->
<!-- ============================================================== -->

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerFirstName)
                @Html.DisplayNameFor(model => model.CustomerLastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerFirstName)
                    @Html.DisplayFor(modelItem => item.CustomerLastName)
                </td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-success btn-xs">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

