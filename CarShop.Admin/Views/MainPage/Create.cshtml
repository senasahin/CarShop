@model CarShop.Model.MainPage

@{
    /**/

    ViewBag.Title = "Anasayfa Ekle";
}

<h2>Anasayfa İçerik Girme Paneli</h2>

<script src="https://cdn.ckeditor.com/4.11.2/standard/ckeditor.js"></script>



        @using (Html.BeginForm("Create", "MainPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.MainPageHeader, "AnaSayfa Başlığı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MainPageHeader, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MainPageHeader, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MainPageDescription, "Anasayfa Yazısı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.MainPageDescription, new { @class = "form-control", @id = "Description" })
                    @Html.ValidationMessageFor(model => model.MainPageDescription, "", new { @class = "text-danger" })
                    <script>
                        CKEDITOR.replace('Description');
                    </script>
                </div>
            </div>

            <div class="form-group">
                <label for="Uploads" class="control-label col-md-2">
                    Anasayfa Fotoğrafı
                </label>
                <div class="col-md-10">
                    <input type="file" name="Upload" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Geriye Dön", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
